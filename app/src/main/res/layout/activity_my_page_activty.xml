<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:orientation="vertical"
    tools:context=".Account.MyPageActivty">

    <TextView
        android:id="@+id/complete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="완료" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/user_stars"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="50dp"
            android:src="@drawable/stars" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름         " />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화         " />

        <EditText
            android:id="@+id/user_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경하기"
            android:textColor="@color/colorGray"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 " />

        <EditText
            android:id="@+id/user_pswd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="현재 비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pswd_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="변경하기"
            android:textColor="@color/colorGray"
            android:textStyle="normal" />
    </LinearLayout>

    <TextView
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorGray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="예약 내역"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/my_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="나의 게시글"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/secession_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="회원탈퇴"
        android:textSize="17sp" />

</LinearLayout>